<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkMenu" id="menu">

    <!-- Toggles -->
    <child>
      <object class="GtkMenuItem" id="autorotate_menu">
        <property name="label">Autorotate</property>
        <child type="submenu">
          <object class="GtkMenu">

            <child>
              <object class="GtkMenuItem" id="toggle-enable">
                <property name="label">Toggle: Enable</property>
              </object>
            </child>

            <child>
              <object class="GtkMenuItem" id="toggle-always">
                <property name="label">Toggle: Always-On (ignore lid)</property>
              </object>
            </child>

          </object>
        </child>
      </object>
    </child>

    <!-- Actions -->
    <child>
      <object class="GtkMenuItem" id="actions_menu">
        <property name="label">Actions</property>
        <child type="submenu">
          <object class="GtkMenu">

            <child>
              <object class="GtkMenuItem" id="force-tablet">
                <property name="label">Simulate Tablet Mode</property>
              </object>
            </child>

            <child>
              <object class="GtkMenuItem" id="force-laptop">
                <property name="label">Simulate Laptop Mode</property>
              </object>
            </child>

            <child>
              <object class="GtkSeparatorMenuItem" id="delimiter-1"/>
            </child>

            <child>
              <object class="GtkMenuItem" id="start-watcher">
                <property name="label">Start Watcher (background)</property>
              </object>
            </child>

            <child>
              <object class="GtkMenuItem" id="stop-watcher">
                <property name="label">Stop Watcher</property>
              </object>
            </child>

          </object>
        </child>
      </object>
    </child>

  </object>
</interface>
